<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.david.moneytracker.Fragments.ViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        >

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Type:"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textColor="#000" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        >
        <Spinner
            android:id="@+id/expenseTypeId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
        </Spinner>
    </LinearLayout>

 <LinearLayout
     android:id="@+id/businessWrapperId"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     >
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Name:"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/businessNameId"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:hint="Business name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        />
 </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From:"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/fromId"
                android:paddingLeft="10dp"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:focusable="false"
                android:background="#fff"
                android:hint="Date" />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:text="To:"
                android:textColor="#000"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/toId"
                android:paddingLeft="10dp"
                android:hint="Time"
                android:focusable="false"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:background="#fff"
                />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Category:"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/expenseId"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:hint="Expense"
        android:text="All"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        />

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:text="View Expenses"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        />
    </LinearLayout>
</ScrollView>
